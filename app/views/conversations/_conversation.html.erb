
<div class="conversation-list">
  <div class="row msg-row">
    <div class="col-md-5">
      <h3>Chat with <strong class="conversation-username"> <%= conversation.with(current_user).full_name %></strong></h3>
    </div>
    <div class="col-md-5">
      <p><em>"<%= conversation.personal_messages.last.body.truncate(50) %>"</em></p>
    </div>
    <div class="col-md-2">
      <%= link_to 'View chat', conversation_path(conversation), class: "btn view-msg-btn" %>
    </div>
  </div>
  <hr>
</div>
