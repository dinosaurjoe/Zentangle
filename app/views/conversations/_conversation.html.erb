
<div class="conversation-list">
  <div class="row msg-row">
    <div class="col-md-5">
      <h3>Chat with <%= conversation.with(current_user).full_name %></h3>
    </div>
    <div class="col-md-5">
      <p>"<%= conversation.personal_messages.last.body.truncate(50) %>"</p>
    </div>
    <div class="col-md-2">
      <%= link_to 'View chat', conversation_path(conversation), class: "btn view-msg-btn" %>
    </div>
  </div>
  <hr>
</div>
