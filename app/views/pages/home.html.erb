<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.45) 0%, rgba(0,36,61,0.45) 50%), url('<%= asset_path('banner.jpg') %>')">
  <div class="banner-content">
    <div class="banner-title">
      <h1>what's your <strong class="home-bold">talent?</strong></h1>
      <h2>find a project, get connected.</h2>
    </div>
    <div class="search-bar">
      <div class="form-inline aa-input-container">
          <%= simple_form_for [@project], url: projects_path, method: :get do |f| %>
          <%= f.input :category, priority: [ "Film" ], collection: Project::CATEGORIES.keys, required: false, prompt: 'category', label:false, class: "home-category"  %>
          <%= f.association :roles, as: :string, required: false, placeholder: "Role", label: false, input_html: { class: "aa-input-search"} %>
          <%= f.input :address, required: false, placeholder: "Location", label: false %>
          <%= f.button :submit, 'search',  class: "btn"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="wrapper">
  <h2>Featured projects</h2>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to project_path(project.id) do%>
          <div class="card">
            <div class="card-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( '<%= image_path project.picture %>');">
            </div>
              <div class="card-content">
                <h3 class="card-title"><%= project.title %></h3>
                <h4 class="card-category"><%= project.category %></h4>
                <h5 class="card-subcategory"><%= project.subcategory %></h5>
                <p><%= project.short_description %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.min.js"></script>
<script>
  var client = algoliasearch("8ECOR4OKYP", "265f77efadba84f52617a6870bfa7c68");
  var index = client.initIndex('Role');
  //initialize autocomplete on search input (ID selector must match)
  autocomplete('#project_role_ids',
  { hint: false }, {
      source: autocomplete.sources.hits(index, {hitsPerPage: 5}),
      //value to be displayed in input control after user's suggestion selection
      displayKey: 'title',
      //hash of templates used when rendering dataset
      templates: {
          //'suggestion' templating function used to render a single suggestion
          suggestion: function(suggestion) {
            return '<span>' +
              suggestion._highlightResult.title.value + '</span>';
          }
      }
  });
</script>
