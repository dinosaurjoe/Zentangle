<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.45) 0%, rgba(0,36,61,0.45) 50%), url('<%= asset_path('banner.jpg') %>')">
  <div class="banner-content">
    <h1>what's your <strong>talent?</strong></h1>
    <div class="search-bar">
      <div class="form-inline">
        <%= simple_form_for [@project], url: projects_path, method: :get do |f| %>
        <%= f.input :category, priority: [ "Film" ], collection: Project::CATEGORIES.keys, required: false, prompt: 'category', label:false, class: "home-category"  %>
        <%= f.input :title, required: false, placeholder: "role", label:false %>

          <%= f.button :submit, 'search',  class: "btn btn-primary"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="wrapper">
  <h2>Featured projects</h2>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to project_path(project.id) do%>
            <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
                <h3><%= project.title %></h3>
                <h4><%= project.category %></h4>
                <h5><%= project.subcategory %></h5>
                <p><%= project.short_description %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
