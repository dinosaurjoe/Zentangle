<div class="index-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.45) 0%, rgba(0,36,61,0.45) 50%), url( <%= @projects.first.try(:picture) %>);">
<%#TODO use default picture for category %>
  <div class="banner-content">
    <div class="form-inline">
      <ul class="list-inline">
        <% @categories.each do |category| %>
        <li>
          <%= link_to category, url_for({project:{category: category}}), class: "#{'active' if category == @category}" %></li>
        <% end %>
      </ul>
  </div>
</div>
</div>



<div class="container">
  <div class="wrapper">
    <div class="subcategories-list list">
    <ul class="list-inline">
      <% @subcategories.each do |subcategory| %>
        <li>
          <% if subcategory == @subcategory %>
            <%= subcategory %>
          <% else %>
            <%= link_to subcategory, url_for({project:{category: @category, subcategory:subcategory}})%>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>

    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to project_path(project.id) do%>
            <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
              <h3><%= project.title %></h3>
              <h5><%= project.subcategory %></h5>
              <p><%= project.short_description %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

