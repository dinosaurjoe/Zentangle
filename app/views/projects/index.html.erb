<div class="index-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.45) 0%, rgba(0,36,61,0.45) 50%), url( <%= @projects.first.picture %>);">
  <div class="banner-content">
    <h3><%= @projects.first.category %></h3>
  </div>
</div>


<div class="container">
  <div class="wrapper">
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
            <h3><%= project.title %></h3>
            <h5><%= project.subcategory %></h5>
            <p><%= project.short_description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

