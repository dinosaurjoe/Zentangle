  <h1><%= @category %></h1>
</div>

<div class="container">
  <div class="wrapper">
<!--   <h2 ><%= @category %></h2> -->
    <div class="form-inline">
      <ul class="list-inline text-center">
        <% @categories.each do |category| %>
        <li class="index-category">
          <%= link_to category, url_for({project:{category: category}}), class: "#{'active' if category == @category} bg-picture" %></li>
        <% end %>
      </ul>
  </div>
    <div class="subcategories-list list">
    <ul class="list-inline text-center">
      <% @subcategories.each do |subcategory| %>
        <li class="index-subcategory">
          <% if subcategory == @subcategory %>
            <%= subcategory %>
          <% else %>
            <%= link_to subcategory, url_for({project:{category: @category, subcategory:subcategory}})%>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>

      <div class="row">
        <% if @projects.empty? %>
          <div class="col-xs-12 col-sm-6">
            <h1>Sorry, no results found</h1>
          </div>
        <% else %>
          <% @projects.each do |project| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <%= link_to project_path(project.id) do%>
              <div class="index-card text-center">
                <div class="index-card-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
                </div>
                <div class="index-card-content">
                  <h3 class="index-card-title"><%= project.title %></h3>
                  <h5 class="index-card-subcategory"><%= project.subcategory %></h5>
                  <p><%= cutoff_text(project.short_description) %></p>
                </div>
              </div>
            <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

  </div>
</div>

