<div id="wrapper">
  <div id="navigation" style="display:none;">
    <ul>
      <li class="active">
        <a href="#">Information</a>
      </li>
      <li>
        <a href="#">Project Details</a>
      </li>
      <li>
        <a href="#">Optional</a>
      </li>
      <li>
        <a href="#">Confirm</a>
      </li>
    </ul>
  </div>
  <div id="steps">
    <%= simple_form_for @project do |f| %>

      <fieldset class="step">
        <legend>Information</legend>
        <div class="row text-center">
        <p>Name of your Project</p>
          <div class="col-xs-12 col-md-8 col-md-offset-4 space-top">
            <%= f.text_field :title, placeholder: 'Name of your Project', label:false %>
          </div>
          <div class="col-xs-12 col-md-8 col-md-offset-4 space-top">
            <%= f.select :category, Project.categories, include_blank:"Select a category" %>
          </div>
        </div>

        <!-- subcategory -->
      </fieldset>

      <fieldset class="step">
        <legend>Description</legend>
        <%= f.text_field :full_description, placeholder: 'Descripe your Project', label:false %>
        <%= f.text_field :short_description, placeholder: 'Summarize your Project!', label:false %>
      </fieldset>

      <fieldset class="step">
        <legend>Optional</legend>
        <%= f.text_field :total_budget, placeholder: 'Do you have a budget for your project?', label:false %>
        <%= f.input :picture %>
        <!-- still need a start_date datepicker -->
        <!-- still need the roles he wants to have!!! -->
      </fieldset>

      <fieldset class="step">
        <%= f.button :submit, 'Create a new Project', class: "btn" %>
      </fieldset>

    <% end %>
  </div>
</div>

