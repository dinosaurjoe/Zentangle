<div class="row">
  <div class="col-xs-12 col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
    <div class="profile-form">
      <div class="row">
        <div class="col-lg-12 profile-form-header">
          <h2>Edit Role</h2>
        </div>
      </div>
      <%= simple_form_for(@user) do |f| %>
        <%= f.text_field :title, placeholder: 'title', label:false %>

        <%= f.text_area :description, placeholder: 'description', label:false %>

        <%= f.text_field :requirements, placeholder: 'requirements', label:false %>

        <%= f.text_field :compensation, placeholder: 'compensation', label:false %>

        <%= f.button :submit, "update role", class: "btn" %>
      <% end %>


    </div>
  </div>
</div>
