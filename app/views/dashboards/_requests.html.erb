<div class="container">
  <div class="wrapper">


    <div class="row requests">
      <% requests.each do |request| %>
        <div class="request-card">
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= link_to request_path(request) do %>
              <div class="user-requests-div" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
                <div class="user-requests-content">
                  <h3><%= request.role.title %></h3>
                  <h5><%= request.project.title %></h5>
                  <div class=<%= request_status %>><%= request_status %></div>
                </div>
              </div>

            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row invites">
      <% invites.each do |request| %>
        <div class="request-card">
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= link_to request_path(request) do %>
              <div class="user-requests-div" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 30%), url( <%= project.picture %>);">
                <div class="user-requests-content">
                  <h3><%= request.role.title %></h3>
                  <h5><%= request.project.title %></h5>
                  <div class=<%= request_status %>><%= request_status %></div>
                </div>
              </div>

            <% end %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>
