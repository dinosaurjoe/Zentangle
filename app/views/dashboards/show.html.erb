<!-- USING BOOTSTRAP TABS! NOT LEWAGON TABS! -->
<div>
  <div class="tab-container">
    <!-- Nav tabs -->
    <div class="responsive">
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#main" aria-controls="#" role="tab" data-toggle="tab">Main</a></li>
        <li role="presentation" ><a href="#projects" aria-controls="#" role="tab" data-toggle="tab">My Projects</a></li>
        <li role="presentation"><a href="#working" aria-controls="#" role="tab" data-toggle="tab">Working on</a></li>
        <li role="presentation"><a href="#incoming" aria-controls="#" role="tab" data-toggle="tab">Incoming</a></li>
        <li role="presentation"><a href="#outgoing" aria-controls="#" role="tab" data-toggle="tab">Outgoing</a></li>
      </ul>
    </div>
  </div>

  <!-- Tab panes -->
  <div class="tab-content">

<!-- EVERYTHING SHOULD BE EDITED IN HERE FOR EACH TAB. ALL HTML CODE GOES IN HERE! -->
    <div role="tabpanel" class="tab-pane active " id="main">
      <%= render 'main' %>
    </div>


<!-- EVERYTHING SHOULD BE EDITED IN HERE FOR EACH TAB. ALL HTML CODE GOES IN HERE! -->
    <div role="tabpanel" class="tab-pane" id="projects">
      <%= render 'my_projects' %>
    </div>

<!-- EVERYTHING SHOULD BE EDITED IN HERE FOR EACH TAB. ALL HTML CODE GOES IN HERE! -->
    <div role="tabpanel" class="tab-pane" id="working">
      working on
    </div>


<!-- EVERYTHING SHOULD BE EDITED IN HERE FOR EACH TAB. ALL HTML CODE GOES IN HERE!-->
    <div role="tabpanel" class="tab-pane" id="incoming">
      <%= render 'requests', requests: @user.incoming_requests, invites: @user.incoming_invites %>
    </div>

      <!-- EVERYTHING SHOULD BE EDITED IN HERE FOR EACH TAB. ALL HTML CODE GOES IN HERE!-->
    <div role="tabpanel" class="tab-pane" id="outgoing">
      <%= render 'requests', requests: @user.outgoing_requests, invites: @user.outgoing_invites %>
    </div>

  </div>
</div>


